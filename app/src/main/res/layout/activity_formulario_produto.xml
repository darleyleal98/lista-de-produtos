<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:fillViewport="true"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".ui.FormularioProdutoActivity">

        <EditText
            android:id="@+id/activity_formulario_produto_edit_nome"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_margin="16dp"
            android:hint="@string/nome"
            android:inputType="text"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="Autofill" />

        <EditText
            android:id="@+id/activity_formulario_produto_edit_descricao"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:hint="@string/descricao"
            android:inputType="text"
            app:layout_constraintEnd_toEndOf="@id/activity_formulario_produto_edit_nome"
            app:layout_constraintStart_toStartOf="@id/activity_formulario_produto_edit_nome"
            app:layout_constraintTop_toBottomOf="@id/activity_formulario_produto_edit_nome"
            tools:ignore="Autofill" />

        <EditText
            android:id="@+id/activity_formulario_produto_edit_valor"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:hint="@string/valor"
            android:inputType="numberDecimal"
            app:layout_constraintEnd_toEndOf="@id/activity_formulario_produto_edit_descricao"
            app:layout_constraintStart_toStartOf="@id/activity_formulario_produto_edit_descricao"
            app:layout_constraintTop_toBottomOf="@id/activity_formulario_produto_edit_descricao"
            tools:ignore="Autofill" />

        <Button
            android:id="@+id/activity_formulario_produto_button_salvar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:text="@string/salvar"
            android:textColor="@color/white"
            app:layout_constraintVertical_bias="1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/activity_formulario_produto_edit_valor" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>